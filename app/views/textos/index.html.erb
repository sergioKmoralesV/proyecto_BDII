
<h1>Buscar Textos</h1>

<%= form_tag(textos_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Buscar texto" %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead
           of using a Rails form helper -->
      <button class="btn btn-xs" type="submit">Buscar</button>
    </div>
  <% end %>
<table class='table table-stripped'>
  <thead>
    <col width='85%'>
    <col width='15%'>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @textos.each do |texto| %>
      <tr>

        <td><%= texto.nombre %></td>
        <td>
          <%= link_to "<button class='btn btn-xs btn-info'>Descargar</button>".html_safe , '/download/'+texto.id.to_s %>
          <%= link_to 'Eliminar', texto, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Texto Nuevo', new_texto_path, class:"btn btn-xs btn-success" %>
